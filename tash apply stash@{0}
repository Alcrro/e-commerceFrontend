[32m+[m[32m'use client';[m
[32m+[m[32mimport React, { useEffect, useState } from 'react';[m
[32m+[m[32mimport ElementsList from '../ui/elementsList/ElementsList';[m
[32m+[m[32mimport {[m
[32m+[m[32m  IMainDepartments,[m
[32m+[m[32m  mainDepartment,[m
[32m+[m[32m  mainSubDepartment,[m
[32m+[m[32m} from '@/constants/mainDepartmentMenu';[m
[32m+[m[32mimport style from './auxProductsMainDepartmentList.module.scss';[m
[32m+[m[32mimport AuxMainDepartmentLink from './mainDepartmentLink/AuxMainDepartmentLink';[m
[32m+[m[32mimport Link from 'next/link';[m
[32m+[m[32mimport CarouselAd from '../ads/CarouselAd';[m
[32m+[m[32mimport CarouselAdSkeleton from '../ui/skeleton/carouselAdSkeleton/CarouselAdSkeleton';[m
[32m+[m
[32m+[m[32mconst AuxProductsMainDepartmentList = ({ active }: { active?: boolean }) => {[m
[32m+[m[32m  const [hoveredLink, setHoveredLink] = useState<string | null>(null);[m
[32m+[m[32m  const [showAd, setShowAd] = useState(false);[m
[32m+[m
[32m+[m[32m  useEffect(() => {[m
[32m+[m[32m    let timeout: NodeJS.Timeout;[m
[32m+[m[32m    if (active) {[m
[32m+[m[32m      timeout = setTimeout(() => setShowAd(true), 100);[m
[32m+[m[32m    } else {[m
[32m+[m[32m      setShowAd(false);[m
[32m+[m[32m    }[m
[32m+[m[32m  }, [active]);[m
[32m+[m[32m  const handleHover = (link: string) => {[m
[32m+[m[32m    setHoveredLink(link);[m
[32m+[m[32m  };[m
[32m+[m
[32m+[m[32m  const handleLeave = () => {[m
[32m+[m[32m    setHoveredLink(null);[m
[32m+[m[32m  };[m
[32m+[m
[32m+[m[32m  // Filter mainSubDepartment based on hovered link[m
[32m+[m[32m  const filteredSubDepartments = mainSubDepartment.find([m
[32m+[m[32m    (dept) => dept.title === hoveredLink[m
[32m+[m[32m  );[m
[32m+[m
[32m+[m[32m  return ([m
[32m+[m[32m    <div[m
[32m+[m[32m      className={`${style.elements_list} ${active ? style.active : ''}`}[m
[32m+[m[32m      onMouseLeave={handleLeave} // Reset hover state when leaving the whole component[m
[32m+[m[32m    >[m
[32m+[m[32m      <ElementsList<IMainDepartments>[m
[32m+[m[32m        elements={mainDepartment}[m
[32m+[m[32m        renderItem={(item: IMainDepartments) => ([m
[32m+[m[32m          <AuxMainDepartmentLink[m
[32m+[m[32m            item={item}[m
[32m+[m[32m            active={active}[m
[32m+[m[32m            key={item.id}[m
[32m+[m[32m            onHover={handleHover}[m
[32m+[m[32m          />[m
[32m+[m[32m        )}[m
[32m+[m[32m      />[m
[32m+[m
[32m+[m[32m      <div[m
[32m+[m[32m        className={`${style.subDepartmentList_container} ${hoveredLink ? style.subDepActive : style.hidden}`}[m
[32m+[m[32m        onMouseEnter={() => setHoveredLink(hoveredLink)} // Keep hovered state[m
[32m+[m[32m        onMouseLeave={handleLeave}[m
[32m+[m[32m      >[m
[32m+[m[32m        <ul className={style.subDepartmentList_ul}>[m
[32m+[m[32m          {filteredSubDepartments?.subDepartmentList.map((item) =>[m
[32m+[m[32m            item.valuesOptions.map((values) => ([m
[32m+[m[32m              <li key={values.id}>[m
[32m+[m[32m                <Link href={`/products/${values.link}`}>{values.label}</Link>[m
[32m+[m[32m              </li>[m
[32m+[m[32m            ))[m
[32m+[m[32m          )}[m
[32m+[m[32m        </ul>[m
[32m+[m[32m      </div>[m
[32m+[m
[32m+[m[32m      {active && showAd ? <CarouselAd /> : <CarouselAdSkeleton />}[m
[32m+[m[32m    </div>[m
[32m+[m[32m  );[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexport default AuxProductsMainDepartmentList;[m
