[32m+[m[32m'use client';[m
[32m+[m
[32m+[m[32mimport { useEffect, useRef, useState } from 'react';[m
[32m+[m[32mimport Link from 'next/link';[m
[32m+[m
[32m+[m[32minterface Department {[m
[32m+[m[32m  id: number;[m
[32m+[m[32m  label: string;[m
[32m+[m[32m  link: string;[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32minterface Props {[m
[32m+[m[32m  secondDepartmentMenu: Department[];[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mconst AuxNavbarMenuResponsive = ({ secondDepartmentMenu }: Props) => {[m
[32m+[m[32m  const [visibleItems, setVisibleItems] =[m
[32m+[m[32m    useState<Department[]>(secondDepartmentMenu);[m
[32m+[m[32m  const [dropdownItems, setDropdownItems] = useState<Department[]>([]);[m
[32m+[m[32m  const containerRef = useRef<HTMLUListElement>(null);[m
[32m+[m
[32m+[m[32m  useEffect(() => {[m
[32m+[m[32m    const adjustMenu = () => {[m
[32m+[m[32m      const container = containerRef.current;[m
[32m+[m[32m      if (!container) return;[m
[32m+[m
[32m+[m[32m      const items = Array.from(container.children).filter([m
[32m+[m[32m        (child) => child.tagName === 'LI'[m
[32m+[m[32m      ) as HTMLLIElement[];[m
[32m+[m
[32m+[m[32m      if (items.length === 0) return;[m
[32m+[m
[32m+[m[32m      let lastItemIndex = secondDepartmentMenu.length;[m
[32m+[m[32m      let firstRowTop = items[0].offsetTop;[m
[32m+[m
[32m+[m[32m      for (let i = 0; i < items.length; i++) {[m
[32m+[m[32m        if (items[i].offsetTop > firstRowTop) {[m
[32m+[m[32m          lastItemIndex = i;[m
[32m+[m[32m          break;[m
[32m+[m[32m        }[m
[32m+[m[32m      }[m
[32m+[m
[32m+[m[32m      setVisibleItems(secondDepartmentMenu.slice(0, lastItemIndex));[m
[32m+[m[32m      setDropdownItems(secondDepartmentMenu.slice(lastItemIndex));[m
[32m+[m[32m    };[m
[32m+[m
[32m+[m[32m    setTimeout(adjustMenu, 100); // Delay to allow styles to apply[m
[32m+[m[32m    window.addEventListener('resize', adjustMenu);[m
[32m+[m[32m    return () => window.removeEventListener('resize', adjustMenu);[m
[32m+[m[32m  }, [secondDepartmentMenu]);[m
[32m+[m
[32m+[m[32m  return ([m
[32m+[m[32m    <div className="w-full overflow-hidden">[m
[32m+[m[32m      <ul[m
[32m+[m[32m        ref={containerRef}[m
[32m+[m[32m        className="flex flex-wrap align-bottom w-full items-center gap-1"[m
[32m+[m[32m      >[m
[32m+[m[32m        {visibleItems.map((item) => ([m
[32m+[m[32m          <li[m
[32m+[m[32m            key={item.id}[m
[32m+[m[32m            className={`px-1 rounded whitespace-nowrap ${[m
[32m+[m[32m              dropdownItems.includes(item) ? 'hidden' : ''[m
[32m+[m[32m            }`}[m
[32m+[m[32m          >[m
[32m+[m[32m            <Link[m
[32m+[m[32m              href={`/second-department/${item.link}`}[m
[32m+[m[32m              className="flex text-white border border-transparent p-2 rounded-full hover:border-white"[m
[32m+[m[32m            >[m
[32m+[m[32m              {item.label}[m
[32m+[m[32m            </Link>[m
[32m+[m[32m          </li>[m
[32m+[m[32m        ))}[m
[32m+[m
[32m+[m[32m        {dropdownItems.length > 0 && ([m
[32m+[m[32m          <li className="relative">[m
[32m+[m[32m            <button className="px-1 py-1 rounded">More â–¼</button>[m
[32m+[m[32m            <ul className="absolute z-10 top-full left-0 shadow-md mt-1 rounded w-40">[m
[32m+[m[32m              {dropdownItems.map((item) => ([m
[32m+[m[32m                <li key={item.id} className="px-2 hover:bg-gray-100">[m
[32m+[m[32m                  <Link[m
[32m+[m[32m                    href={`/second-department/${item.link}`}[m
[32m+[m[32m                    className="block"[m
[32m+[m[32m                  >[m
[32m+[m[32m                    {item.label}[m
[32m+[m[32m                  </Link>[m
[32m+[m[32m                </li>[m
[32m+[m[32m              ))}[m
[32m+[m[32m            </ul>[m
[32m+[m[32m          </li>[m
[32m+[m[32m        )}[m
[32m+[m[32m      </ul>[m
[32m+[m[32m    </div>[m
[32m+[m[32m  );[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexport default AuxNavbarMenuResponsive;[m
