[32m+[m[32mimport React from 'react';[m
[32m+[m[32mimport QuestionsList from './QuestionsList';[m
[32m+[m[32mimport ContainerLayout from '@/components/layouts/mainLayout/ContainerLayout';[m
[32m+[m[32mimport style from './questionAbout.module.scss';[m
[32m+[m[32mimport { IQuestionList, questionsList } from '@/constants/footer/questionsList';[m
[32m+[m[32mconst QuestionsAbout = () => {[m
[32m+[m[32m  const transformedData = questionsList.map((item: IQuestionList) => ({[m
[32m+[m[32m    title: item.title,[m
[32m+[m[32m    content: item.message,[m
[32m+[m[32m  }));[m
[32m+[m[32m  return ([m
[32m+[m[32m    <ContainerLayout>[m
[32m+[m[32m      <div className={style.question_about_container}>[m
[32m+[m[32m        <QuestionsList items={transformedData} used={false} />[m
[32m+[m[32m      </div>[m
[32m+[m[32m    </ContainerLayout>[m
[32m+[m[32m  );[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexport default QuestionsAbout;[m
[1mdiff --git a/src/components/footer/questionsAbout/QuestionsList.tsx b/src/components/footer/questionsAbout/QuestionsList.tsx[m
[1mnew file mode 100644[m
[1mindex 0000000..9940bfc[m
[1m--- /dev/null[m
[1m+++ b/src/components/footer/questionsAbout/QuestionsList.tsx[m
[36m@@ -0,0 +1,82 @@[m
[32m+[m[32m'use client';[m
[32m+[m[32mimport React, { useState } from 'react';[m
[32m+[m[32mimport style from './questionsList.module.scss';[m
[32m+[m[32mimport Link from 'next/link';[m
[32m+[m[32mimport generateLinkFromText from '@/utils/generLinkFromText';[m
[32m+[m
[32m+[m[32minterface QuestionItem {[m
[32m+[m[32m  title: string;[m
[32m+[m[32m  content?: string;[m
[32m+[m[32m  options?: string[];[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32minterface QuestionsListProps {[m
[32m+[m[32m  items: QuestionItem[];[m
[32m+[m[32m  used: boolean;[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mconst QuestionsList: React.FC<QuestionsListProps> = ({ items, used }) => {[m
[32m+[m[32m  const [activeIndex, setActiveIndex] = useState<number | null>(null);[m
[32m+[m
[32m+[m[32m  const toggleActive = (index: number) => {[m
[32m+[m[32m    setActiveIndex(activeIndex === index ? null : index);[m
[32m+[m[32m  };[m
[32m+[m
[32m+[m[32m  return ([m
[32m+[m[32m    <div className={`${style.list_container} ${used ? style.isUsed : ''}`}>[m
[32m+[m[32m      <div className={style.list_inner}>[m
[32m+[m[32m        <ul className={style.list_inner_ul}>[m
[32m+[m[32m          {items.map((item, index) => {[m
[32m+[m[32m            const isActive = activeIndex === index;[m
[32m+[m
[32m+[m[32m            return ([m
[32m+[m[32m              <li key={index}>[m
[32m+[m[32m                <h3[m
[32m+[m[32m                  className={isActive ? style.isActive : ''}[m
[32m+[m[32m                  onClick={() => toggleActive(index)}[m
[32m+[m[32m                >[m
[32m+[m[32m                  <Link[m
[32m+[m[32m                    href={[m
[32m+[m[32m                      !isActive[m
[32m+[m[32m                        ? `#${generateLinkFromText(item.title.toLowerCase())}`[m
[32m+[m[32m                        : '#'[m
[32m+[m[32m                    }[m
[32m+[m[32m                    scroll={false}[m
[32m+[m[32m                  >[m
[32m+[m[32m                    {item.title}[m
[32m+[m[32m                  </Link>[m
[32m+[m[32m                </h3>[m
[32m+[m[32m                {item.content ? ([m
[32m+[m[32m                  <div className={isActive ? style.active : style.hidden}>[m
[32m+[m[32m                    <p>{item.content}</p>[m
[32m+[m[32m                  </div>[m
[32m+[m[32m                ) : ([m
[32m+[m[32m                  Array.isArray(item.options) &&[m
[32m+[m[32m                  item.options.length > 0 && ([m
[32m+[m[32m                    <ul className={style.list_options}>[m
[32m+[m[32m                      {item.options.map((option, optIndex) => ([m
[32m+[m[32m                        <li[m
[32m+[m[32m                          key={optIndex}[m
[32m+[m[32m                          className={isActive ? style.active : style.hidden}[m
[32m+[m[32m                        >[m
[32m+[m[32m                          <Link[m
[32m+[m[32m                            href={`/help/${generateLinkFromText(option.toLocaleLowerCase())}`}[m
[32m+[m[32m                            className="block w-full"[m
[32m+[m[32m                          >[m
[32m+[m[32m                            {option}[m
[32m+[m[32m                          </Link>[m
[32m+[m[32m                        </li>[m
[32m+[m[32m                      ))}[m
[32m+[m[32m                    </ul>[m
[32m+[m[32m                  )[m
[32m+[m[32m                )}[m
[32m+[m[32m              </li>[m
[32m+[m[32m            );[m
[32m+[m[32m          })}[m
[32m+[m[32m        </ul>[m
[32m+[m[32m      </div>[m
[32m+[m[32m    </div>[m
[32m+[m[32m  );[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mexport default QuestionsList;[m
